    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "postDebugTask": "func: unlock port",
            "args": [
                "--factory",
                "src.main:create_app",
                "--env-file",
                ".env",
                "--reload",
                "--reload-dir",
                "${workspaceFolder}",
            ],
            "jinja": false,
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/app",
                "PYTHONUNBUFFERED": "1"
            },
        }
    ]
}